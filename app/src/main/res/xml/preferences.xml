<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"


    >
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref"
        android:summary="Configura frecuencia de notificaciones, y elige una acci贸n a tu respuesta"
        android:title="Notificaciones" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_1"
        android:summary="Perminir abrir vinculos desde la app"
        android:title="Vinculos"

        />

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="Descripcion preferencias redes sociales"
        android:title="Compartir en redes sociales" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the
    activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Mi Nombre"
        android:inputType="textCapWords"
        android:key="example_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Cambiar nombre" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="notifications_new_message"
        android:title="Nuevos mensajes de notificaci贸n" />

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <RingtonePreference
        android:defaultValue="content://settings/system/notification_sound"
        android:dependency="notifications_new_message"
        android:key="notifications_new_message_ringtone"
        android:ringtoneType="notification"
        android:title="Tono notificaci贸n" />

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <SwitchPreference
        android:defaultValue="true"
        android:dependency="notifications_new_message"
        android:key="notifications_new_message_vibrate"
        android:title="Vibraci贸n" />
</PreferenceScreen>