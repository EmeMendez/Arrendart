<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/ico2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textSize="45dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorSoftGray"
            android:layout_marginBottom="10dp"

            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColorHint="@color/colorSoftGray"

            >

            <EditText
                android:id="@+id/singin_id"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:hint="e-mail"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorSoftGray"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:inputType="textEmailAddress"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:textColorHint="@color/colorSoftGray"
            app:passwordToggleTint="@color/colorSoftGray"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/singin_pass"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:hint="Contraseña"
                android:drawablePadding="-48dp"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColor="@color/colorSoftGray"
                >

            </android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/link_singup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Necesito una cuenta"
            android:gravity="center"
            android:textColorHint="@color/colorSoftGray"
            android:textColor="@color/colorSoftGray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Iniciar"
            android:background="@drawable/ripple_contained"
            android:textColor="@color/colorPrimary"
            />
        <Button
            android:id="@+id/btn_skip"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Omitir Iniciar Sesión"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_outline"
            android:textColor="#ffff"
            />
        <TextView
            android:id="@+id/politics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Políticas de privacidad"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorSoftGray"
            android:textColor="@color/colorSoftGray"
            android:layout_marginBottom="10dp"

            />
    </LinearLayout>
</LinearLayout>